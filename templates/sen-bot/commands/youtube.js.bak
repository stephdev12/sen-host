// --- 1. COMMANDE IOS / STANDARD (.iyoutube) ---
export async function iytSearchCommand(sock, chatId, message, args) {
    const ui = new StephUI(sock);
    const query = args.join(' ');

    if (!query) {
        return await sock.sendMessage(chatId, { text: '‚ùå Veuillez entrer une recherche.' }, { quoted: message });
    }

    try {
        await sock.sendMessage(chatId, { react: { text: 'üçé', key: message.key } });

        const searchResult = await yts(query);
        const videos = searchResult.videos.slice(0, 1);

        if (!videos.length) return sock.sendMessage(chatId, { text: '‚ùå Aucun r√©sultat.' }, { quoted: message });

        const video = videos[0];

        await ui.buttons(chatId, {
            text: `*SEN DOWNLOADER*\n\n` +
                  `> üéµ *Titre* : ${video.title}\n` +
                  `> üë§ *Auteur* : ${video.author.name}\n` +
                  `> ‚è±Ô∏è *Dur√©e* : ${video.timestamp}\n\n` +
                  `_Choisissez un format :_`,
            footer: "BY SEN STUDIO",
            image: video.thumbnail,
            buttons: [
                { 
                    id: `ytmp3_${video.url}`, 
                    text: "üéµ AUDIO" 
                },
                { 
                    id: `ytmp4_${video.url}`, 
                    text: "üé¨ VID√âO" 
                }
            ],
            quoted: message
        });

    } catch (error) {
        console.error('iYT Error:', error);
        await sock.sendMessage(chatId, { text: '‚ùå Erreur StephUI.' }, { quoted: message });
    }
}

// --- 2. COMMANDE ANDROID (CAROUSEL) ---
export async function ytSearchCommand(sock, chatId, message, args) {
    const ui = new StephUI(sock);
    const query = args.join(' ');

    if (!query) return sock.sendMessage(chatId, { text: '‚ùå Recherche vide.' });
    if (query.includes('youtube.com') || query.includes('youtu.be')) return ytVideoCommand(sock, chatId, message, [query]);

    try {
        await sock.sendMessage(chatId, { react: { text: 'üîç', key: message.key } });
        const searchResult = await yts(query);
        const videos = searchResult.videos.slice(0, 6);

        const cards = videos.map(video => {
            let imageUrl = video.thumbnail;
            
            if (imageUrl.includes('i.ytimg.com') || imageUrl.includes('i9.ytimg.com')) {
                const videoId = video.videoId || video.url.split('v=')[1]?.split('&')[0];
                if (videoId) {
                    imageUrl = `https://img.youtube.com/vi/${videoId}/hqdefault.jpg`;
                }
            }
            
            return {
                title: video.title.substring(0, 50).toUpperCase(),
                body: `‚è±Ô∏è ${video.timestamp} | üë§ ${video.author.name}`,
                image: imageUrl,
                buttons: [
                    { id: `ytmp3_${video.url}`, text: "üéµ Audio", type: "quick_reply" },
                    { id: `ytmp4_${video.url}`, text: "üé¨ Video", type: "quick_reply" }
                ]
            };
        });

        await ui.carousel(chatId, { header: "YOUTUBE SEARCH", cards: cards, quoted: message });
    } catch (error) {
        console.error(chalk.red('Error in ytSearchCommand:'), error.message);
        await sock.sendMessage(chatId, { text: '‚ùå Erreur Carousel.' }, { quoted: message });
    }
}

// --- 3. HELPER: Obtenir taille fichier ---
async function getFileSize(url) {
    try {
        const response = await axios.head(url, { timeout: 10000 });
        const contentLength = response.headers['content-length'];
        return contentLength ? parseInt(contentLength) : 0;
    } catch (error) {
        console.error(chalk.red('Error getting file size:'), error.message);
        return 0;
    }
}

// --- 4. HELPER: Formater taille ---
function formatBytes(bytes) {
    if (bytes === 0) return '0 Bytes';
    const k = 1024;
    const sizes = ['Bytes', 'KB', 'MB', 'GB'];
    const i = Math.floor(Math.log(bytes) / Math.log(k));
    return Math.round((bytes / Math.pow(k, i)) * 100) / 100 + ' ' + sizes[i];
}

// --- 5. T√âL√âCHARGER AUDIO ---
export async function ytAudioCommand(sock, chatId, message, args) {
    const url = Array.isArray(args) ? args[0] : args;
    if (!url) return;
    
    try {
        await sock.sendMessage(chatId, { react: { text: '‚è≥', key: message.key } });
        
        const { data } = await axios.get(`https://apis.davidcyriltech.my.id/youtube/mp3?url=${url}&apikey=`);
        
        if (!data.success) throw new Error('API Fail');
        
        await sock.sendMessage(chatId, {
            audio: { url: data.result.download_url },
            mimetype: 'audio/mpeg',
            contextInfo: { 
                externalAdReply: { 
                    title: data.result.title, 
                    body: "SEN MUSIC", 
                    thumbnailUrl: data.result.thumbnail, 
                    mediaType: 1, 
                    renderLargerThumbnail: true 
                }
            }
        }, { quoted: message });
        
        await sock.sendMessage(chatId, { react: { text: '‚úÖ', key: message.key } });
        
    } catch (e) { 
        console.error(chalk.red('Error in ytAudioCommand:'), e.message);
        await sock.sendMessage(chatId, { text: '‚ùå Erreur lors du t√©l√©chargement audio.' }); 
        await sock.sendMessage(chatId, { react: { text: '‚ùå', key: message.key } });
    }
}

// --- 6. T√âL√âCHARGER VID√âO ---
export async function ytVideoCommand(sock, chatId, message, args) {
    const url = Array.isArray(args) ? args[0] : args;
    if (!url) return;
    
    try {
        await sock.sendMessage(chatId, { react: { text: '‚è≥', key: message.key } });
        
        const { data } = await axios.get(`https://apis.davidcyriltech.my.id/download/ytmp4?url=${url}&apikey=`);
        
        if (!data.success) throw new Error('API Failed');
        
        const videoUrl = data.result.download_url;
        const title = data.result.title;
        
        // V√©rifier la taille
        const fileSize = await getFileSize(videoUrl);
        const fileSizeMB = fileSize / (1024 * 1024);
        
        const MAX_SIZE_MB = 50;
        
        if (fileSizeMB > MAX_SIZE_MB) {
            // üóÇÔ∏è ENVOYER EN DOCUMENT
            console.log(chalk.yellow(`üì¶ Sending as document (${fileSizeMB.toFixed(2)} MB)`));
            
            await sock.sendMessage(chatId, {
                document: { url: videoUrl },
                fileName: `${title}.mp4`,
                mimetype: 'video/mp4',
                caption: `*${title}*\n\n ${formatBytes(fileSize)}\n> SEN VIDEO`
            }, { quoted: message });
            
        } else {
            // üé¨ ENVOYER EN VID√âO
            console.log(chalk.green(`üé¨ Sending as video (${fileSizeMB.toFixed(2)} MB)`));
            
            await sock.sendMessage(chatId, { 
                video: { url: videoUrl }, 
                caption: `*${title}*\n\nüì¶ Taille: ${formatBytes(fileSize)}\n> SEN VIDEO`, 
                gifPlayback: false 
            }, { quoted: message });
        }
        
        await sock.sendMessage(chatId, { react: { text: '‚úÖ', key: message.key } });
        
    } catch (e) { 
        console.error(chalk.red('Error in ytVideoCommand:'), e.message);
        await sock.sendMessage(chatId, { text: '‚ùå Erreur lors du t√©l√©chargement vid√©o.' }); 
        await sock.sendMessage(chatId, { react: { text: '‚ùå', key: message.key } });
    }
}

export default { ytSearchCommand, ytAudioCommand, ytVideoCommand, iytSearchCommand };